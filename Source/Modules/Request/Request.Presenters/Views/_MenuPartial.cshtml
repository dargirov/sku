@using Microsoft.AspNetCore.Mvc.Localization
@using Administration.Bll

@inject IViewLocalizer Localizer
@inject IAuthorizationServices AuthorizationServices

@{
    var modulePrivileges = await AuthorizationServices.GetModulePrivileges();
}

<section id="module-menu">
    <strong>@Localizer["Actions"]</strong>
    <ul>
        <li><a asp-controller="request" asp-action="index">@Localizer["List products"]</a></li>
        @if (modulePrivileges.RequestWrite)
        {
            <li><a asp-controller="request" asp-action="edit" asp-route-id="">@Localizer["New request"]</a></li>
        }
    </ul>
</section>